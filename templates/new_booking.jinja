{% extends "base.jinja" %}

{% block content %}

<form action="/new_booking" method="post">
    <div>
        <label for="customer_name">Customer Name:</label>
        <input type="text" id="customer_name" name="customer_name" required autofocus />
    </div>
    <div>
        <label for="treatment_id">Treatment Name:</label>
        <select name="treatment_id" id="treatment_id">
            {% for treatment in treatments %}
            <option value={{ treatment.id }}>{{ treatment.treatment_name }}</option>
            {% endfor %}
        </select>
    </div>
    <div>
        <label for="booking_date">Booking Date:</label>
        <select name="booking_date" id="booking_date">
            <option value="14th March 2264">14th March 2264</option>
            <option value="5th April 2264">5th April 2264</option>
            <option value="18th May 2264">18th May 2264</option>
            <option value="9th July 2264">9th July 2264</option>
            <option value="20th July 2264">20th July 2264</option>
            <option value="24th August 2264">24th August 2264</option>
            <option value="2nd November 2264">2nd November 2264</option>
            <option value="23rd November 2264">23rd November 2264</option>
            <option value="19th December 2264">19th December 2264</option>
            <option value="1st January 2265">1st January 2265</option>
            <option value="29th January 2265">29th January 2265</option>
        </select>
    </div>
    <div>
        <label for="booking_time">Booking Time:</label>
        <select name="booking_time" id="booking_time">
            <option value="08:00">08:00</option>
            <option value="09:00">09:00</option>
            <option value="10:00">10:00</option>
            <option value="11:00">11:00</option>
            <option value="12:00">12:00</option>
            <option value="13:00">13:00</option>
            <option value="14:00">14:00</option>
            <option value="15:00">15:00</option>
            <option value="16:00">16:00</option>
            <option value="17:00">17:00</option>
        </select>
    </div>
    <button type="submit" id="new_treatment">Book New Treatment</button>
</form>

{% endblock %}